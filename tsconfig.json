{
    "include": [
        "./src/*",
    ],
    "files": [
        "custom.d.ts"
    ],
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es2015",
            "esnext.intl",
            "es2017.intl",
            "es2018.intl"
        ],
        "jsx": "react",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "allowJs": true,
        "baseUrl": "src"
    }
}